<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
  </startup>
  
  <connectionStrings>
    <!-- MySQL数据库连接字符串 -->
    <add name="MESConnectionString" 
         connectionString="Server=localhost;Database=mes_system;Uid=mes_user;Pwd=your_password;CharSet=utf8mb4;SslMode=none;" 
         providerName="MySql.Data.MySqlClient" />
  </connectionStrings>
  
  <appSettings>
    <!-- 数据访问模式：InMemory（离线） / MySql（数据库） -->
    <add key="DataAccessMode" value="InMemory" />

    <!-- 日志配置 -->
    <add key="LogLevel" value="Info" />
    <add key="LogPath" value="logs" />
  </appSettings>
</configuration>
