<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
	</startup>

	<!-- 数据库连接字符串配置 -->
	<connectionStrings>
		<!-- 开发环境数据库连接 -->
		<add name="MESConnectionString" connectionString="Server=localhost;Database=mes_db;Uid=root;Pwd=123456;CharSet=utf8mb4;SslMode=none;" providerName="MySql.Data.MySqlClient" />

		<!-- 测试环境数据库连接 -->
		<add name="MESTestConnectionString" connectionString="Server=testserver;Database=MES_TEST_DB;Uid=testuser;Pwd=testpass;CharSet=utf8mb4;SslMode=none;" providerName="MySql.Data.MySqlClient" />
	</connectionStrings>

	<!-- 应用程序设置 -->
	<appSettings>
		<!-- 当前环境：Development, Test, Production -->
		<add key="Environment" value="Development" />

		<!-- 日志配置 -->
		<add key="LogLevel" value="Info" />
		<add key="LogPath" value="Logs" />
		<add key="LogMaxFileSize" value="10MB" />
		<add key="LogMaxFiles" value="30" />

		<!-- 系统配置 -->
		<add key="SystemTitle" value="MES制造执行系统" />
		<add key="SystemVersion" value="1.0.0" />
		<add key="CompanyName" value="您的公司名称" />

		<!-- 功能开关 -->
		<add key="EnableDebugMode" value="true" />
		<add key="EnableAutoBackup" value="false" />
		<add key="BackupInterval" value="24" />

		<!-- 界面配置 -->
		<add key="DefaultTheme" value="Default" />
		<add key="DefaultLanguage" value="zh-CN" />

		<!-- 安全配置 -->
		<add key="SessionTimeout" value="30" />
		<add key="MaxLoginAttempts" value="5" />
		<add key="PasswordMinLength" value="6" />

		<!-- 数据配置 -->
		<add key="PageSize" value="20" />
		<add key="MaxExportRecords" value="10000" />

		<!-- 报表配置 -->
		<add key="ReportPath" value="Reports" />
		<add key="TempPath" value="Temp" />
	</appSettings>

	<!-- 运行时配置 -->
	<runtime>
		<!--  启用详细的异步堆栈跟踪 - VS2022级别 -->
		<legacyCorruptedStateExceptionsPolicy enabled="true" />
		<ThrowUnobservedTaskExceptions enabled="true" />
		<generatePublisherEvidence enabled="false" />
		<disableFusionUpdatesFromADManager enabled="true" />

		<assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
			<!-- 程序集绑定重定向配置 -->
			<dependentAssembly>
				<assemblyIdentity name="System.Runtime.CompilerServices.Unsafe" publicKeyToken="b03f5f7f11d50a3a" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-6.0.3.0" newVersion="6.0.3.0" />
			</dependentAssembly>
			<dependentAssembly>
				<assemblyIdentity name="System.Memory" publicKeyToken="cc7b13ffcd2ddd51" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-4.0.1.2" newVersion="4.0.1.2" />
			</dependentAssembly>
			<dependentAssembly>
				<assemblyIdentity name="System.Buffers" publicKeyToken="cc7b13ffcd2ddd51" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-4.0.5.0" newVersion="4.0.5.0" />
			</dependentAssembly>
			<dependentAssembly>
				<assemblyIdentity name="System.IO.Pipelines" publicKeyToken="cc7b13ffcd2ddd51" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-9.0.0.5" newVersion="5.0.0.2" />
			</dependentAssembly>
			<dependentAssembly>
				<assemblyIdentity name="System.Threading.Tasks.Extensions" publicKeyToken="cc7b13ffcd2ddd51" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-4.2.4.0" newVersion="4.2.4.0" />
			</dependentAssembly>
			<dependentAssembly>
				<assemblyIdentity name="Google.Protobuf" publicKeyToken="a7d26565bac4d604" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-3.31.1.0" newVersion="3.31.1.0" />
			</dependentAssembly>
			<dependentAssembly>
				<assemblyIdentity name="System.Diagnostics.DiagnosticSource" publicKeyToken="cc7b13ffcd2ddd51" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-8.0.0.1" newVersion="8.0.0.1" />
			</dependentAssembly>
			<dependentAssembly>
				<assemblyIdentity name="System.Buffers" publicKeyToken="cc7b13ffcd2ddd51" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-4.0.5.0" newVersion="4.0.3.0" />
			</dependentAssembly>
			<dependentAssembly>
				<assemblyIdentity name="System.Numerics.Vectors" publicKeyToken="b03f5f7f11d50a3a" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-4.5.0.0" newVersion="4.5.0.0" />
			</dependentAssembly>
		</assemblyBinding>
	</runtime>

	<!--  VS2022级别的详细调试配置 -->
	<system.diagnostics>
		<trace autoflush="true" indentsize="4">
			<listeners>
				<!-- 详细调试输出到文件 -->
				<add name="DetailedDebugListener"
                     type="System.Diagnostics.TextWriterTraceListener"
                     initializeData="debug_detailed.log"
                     traceOutputOptions="ProcessId,ThreadId,Timestamp,DateTime,Callstack" />

				<!-- 移除默认监听器以避免重复 -->
				<remove name="Default" />
			</listeners>
		</trace>

		<!-- 详细的源级别跟踪 -->
		<sources>
			<!-- .NET Framework运行时跟踪 -->
			<source name="System.Net" switchValue="Verbose">
				<listeners>
					<add name="NetTraceListener"
                         type="System.Diagnostics.TextWriterTraceListener"
                         initializeData="debug_net.log" />
				</listeners>
			</source>

			<!-- 程序集加载跟踪 -->
			<source name="System.Runtime.Loader" switchValue="Verbose">
				<listeners>
					<add name="LoaderTraceListener"
                         type="System.Diagnostics.TextWriterTraceListener"
                         initializeData="debug_loader.log" />
				</listeners>
			</source>

			<!-- WinForms跟踪 -->
			<source name="System.Windows.Forms" switchValue="Verbose">
				<listeners>
					<add name="WinFormsTraceListener"
                         type="System.Diagnostics.TextWriterTraceListener"
                         initializeData="debug_winforms.log" />
				</listeners>
			</source>
		</sources>

		<!-- 详细的开关配置 -->
		<switches>
			<!-- 启用所有级别的跟踪 -->
			<add name="General" value="4" />
			<add name="System.Net.Sockets" value="4" />
			<add name="System.Net.Cache" value="4" />
			<add name="System.Net.HttpListener" value="4" />
			<add name="System.Data" value="4" />
			<add name="System.Windows.Forms" value="4" />
		</switches>
	</system.diagnostics>
</configuration>
